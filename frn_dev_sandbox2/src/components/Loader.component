<apex:component >
	<script src="//cdn.rawgit.com/malsup/blockui/316f6e5d/jquery.blockUI.js" />
	<script type="text/javascript">
        var frn = frn || {};
        //var jQ = $.noConflict(); 
        frn.showLoader = function(){
            $.blockUI({ css: {
                    border: 'none', 
                    padding: '15px', 
                    backgroundColor: '#000', 
                    '-webkit-border-radius': '10px', 
                    '-moz-border-radius': '10px', 
                    opacity: .5, 
                    color: '#fff' 
            }}); 
        };

        frn.hideLoader = function(){
            $.unblockUI();
        };
</script>
</apex:component>