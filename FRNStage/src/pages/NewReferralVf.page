<apex:page standardcontroller="Referral__c" extensions="RefEXTN" >>
<apex:form >
    <apex:pageBlock title="Referral Edit New Referral" mode="edit">
        <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
                <apex:commandButton action="{!saveandnew}" value="Save & New"/>
                <apex:commandButton action="{!Cancel}" value="Cancel"/>
            </apex:pageBlockButtons>    
            <apex:pageBlockSection title="Referral Edit">
                <apex:inputField value="{!Referral__c.Patient_Name__c}"/>
                <apex:inputField value="{!Referral__c.Referral_Contact__c}"/>
                <apex:inputField value="{!Referral__c.Patient_ID__c}"/>
                <apex:inputField value="{!Referral__c.Consentor__c}"/>
                <apex:inputField value="{!Referral__c.Account__c}"/>
                <apex:inputField value="{!Referral__c.Referral_Reason__c}"/>
                <apex:inputField value="{!Referral__c.Program__c}"/>
                <apex:inputField value="{!Referral__c.Therapist__c}"/>
                <apex:inputField value="{!Referral__c.Intervention_Date__c}"/>
                <apex:inputField value="{!Referral__c.Admission_Date__c}"/>
                <apex:inputField value="{!Referral__c.Intervention_Disposition__c}"/>
                <apex:inputField value="{!Referral__c.Admission_Disposition__c}"/>
                <!--<apex:inputField value="{!Referral__c.Intervention_Submitted_By__c}"/>-->
                <apex:inputField value="{!Referral__c.Not_Admitted_Reason__c}"/>
                <apex:inputField value="{!Referral__c.Date_Discharged__c}"/>
                <apex:inputField value="{!Referral__c.Followed_Up__c}"/>
                <apex:inputField value="{!Referral__c.Notes__c}"/>

            </apex:pageBlockSection>


    </apex:pageBlock>



</apex:form>
  
</apex:page>